@model PCAssembly.Review

@{
    ViewData["Title"] = "Add Review";
}

<h1>Add Review</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReview" method="post">
            <!-- Выводим все ошибки модели, если они есть -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Скрытое поле для UserId -->
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="AssemblyId" class="control-label"></label>
                <select asp-for="AssemblyId" class="form-control" asp-items="ViewBag.AssemblyId"></select>
                <span asp-validation-for="AssemblyId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReviewText" class="control-label"></label>
                <input asp-for="ReviewText" class="form-control" />
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" type="number" class="form-control" min="1" max="5" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
