@model PCAssembly.Assembly

@{
    ViewData["Title"] = "Create Assembly";
}

<h1>Create Assembly</h1>

<h4>Assembly</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAssembly">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AssemblyName" class="control-label"></label>
                <input asp-for="AssemblyName" class="form-control" />
                <span asp-validation-for="AssemblyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="MyAssemblies">Back to My Assemblies</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
